{
  "include": [
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "allowJs": true
  }
}
